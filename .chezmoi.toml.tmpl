{{- $device_type := "desktop" -}}
{{- if eq .chezmoi.os "linux" -}}
{{-     if eq (output "hostnamectl" "--json=short" | mustFromJson).Chassis "laptop" "convertible" -}}
{{-       $device_type = "laptop" -}}
{{-     end -}}
{{- else if eq .chezmoi.os "android" -}}
{{-   $device_type = "phone" -}}
{{- end -}}

[diff]
command = "difft"
args = ["--color", "always", "--skip-unchanged"]
pager = "less -RF"
exclude = ["scripts"]
reverse = false

[data]
device_type = {{ $device_type | lower | quote }}

[github]
refreshPeriod = "12h"
