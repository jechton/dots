# Extra autostart processes
# exec-once = uwsm-app -- my-service
exec-once = hyprctl setcursor "Bibata-Modern-Classic" 24
{{ if eq .device_type "desktop" -}}
exec-once = hyprpm reload -nn
{{ end -}}
exec-once = uwsm-app -- signal-desktop --start-in-tray
exec-once = uwsm-app -- Telegram -startintray
exec-once = uwsm-app -- slack -u
exec-once = uwsm-app -- vesktop -m
exec-once = sunsetr
exec-once = syncthing serve --no-browser
exec-once = kdeconnectd
{{ if eq .device_type "desktop" -}}
exec-once = hyprctl dispatch workspace 1
{{ end -}}
